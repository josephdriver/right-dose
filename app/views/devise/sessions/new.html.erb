<div class="container w-75">
  <div class="small-form d-flex flex-column justify-content-center w-75 mx-auto">
    <h2 class="mb-3 font-weight-bold text-center" id="rd-namex"><span id="rd-logo">RD</span> Right Dose</h2>
    <h4 class="text-center mb-4">Login</h4>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="errors"></div>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-center md-margin-btm">
        <%= f.button :submit, "Log in", class: "btn btn-primary inline" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
      <%= link_to "back", root_path %>
    </div>
  </div>
</div>


