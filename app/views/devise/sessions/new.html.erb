<div class="banner-wrapper d-flex blue-background" style="background-image: radial-gradient(circle, rgba(63,94,251,0) 0%, rgba(0,0,0,0.7808857808857809) 100%), url(<%= asset_path('banner.jpg') %>);">
  <div class="banner-content container my-auto mx-auto">
    <h1>Right Dose</h1>
    <h3>Improving patient outcomes</h3>
  </div>
</div>
<div class="small-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-center md-margin-btm">
      <%= f.button :submit, "Log in", class: "btn btn-primary inline" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
    <%= link_to "back", root_path %>
  </div>
</div>



