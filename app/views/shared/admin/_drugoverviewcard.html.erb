<div class="overview-card">
  <div>
    <div class="d-flex p-3 justify-content-between">
      <div>
        <h3 class="no-margin">Current Medication List</h3>
        <p class="grey">as at <%= Time.now.strftime("%m/%d/%Y") %></p>
      </div>
      <div class="d-flex">
        <div>
          <%= link_to 'Add Medication', new_drug_path, class: "btn btn-primary" %>
        </div>
        <div class="search-form">
          <input class="form-control main-form" type="text" placeholder="Search" aria-label="Search">
        </div>
      </div>
    </div>
    <div class="d-flex px-5 justify-content-between grey-btm-border">
      <div class="lg-inf">
        <p class="grey">Medication Name</p>
      </div>
      <div class="lg-inf">
        <p class="grey">Presentations</p>
      </div>
      <div class="d-flex">
        <div class="xs-inf">
          <p class="grey">Date Created</p>
        </div>
        <div class="xs-inf">
          <p class="grey">Last Updated</p>
        </div>
      </div>
    </div>
    <% @drugs.each do |drug| %>
    <div class="d-flex px-5 justify-content-between grey-btm-border margin-tp">
      <div class="lg-inf">
        <p class=""><%= drug.name %></p>
      </div>
      <div class="lg-inf md-margin-btm">
          <% drug.presentations.each do |presentation| %>
        <div>
          <p class="no-margin"><%= presentation.dose %><%= presentation.dose_unit %> in <%= presentation.volume %><%= presentation.volume_unit %></p>
        </div>
        <% end %>
      </div>
      <div class="d-flex">
        <div class="xs-inf">
          <p class=""> <%= drug.created_at.strftime("%m/%d/%Y") %> </p>
        </div>
        <div class="xs-inf d-flex justify-content-around">
          <p class=""> <%= drug.updated_at.strftime("%m/%d/%Y") %> </p>
        </div>
        <div>
          <%= link_to drug_path(drug), method: :delete do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
