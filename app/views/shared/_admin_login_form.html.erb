<div class="small-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
    <div class="errors"></div>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-center md-margin-btm">
      <%= f.button :submit, "Log in", class: "btn btn-primary inline" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
    <%= link_to "back", root_path %>
  </div>
</div>
