function addPatientInfo() {
  const age = document.querySelector('#case_age').value;
  const weight = document.querySelector('#case_weight').value;
  const submit = document.querySelector('input.btn');

  submit.addEventListener('click', (event)=> {
    // event.preventDefault();

    document.querySelector('.patient-info-age').innerText = `AGE: ${age}`;
    document.querySelector('.patient-info-weight').innerText = `WEIGHT: ${weight}`;

    closeModal();
  })
}

function closeModal() {
  // const updatePatientModal = document.querySelector('.modal');
  // updatePatientModal.style.display('none');
  const btn = document.querySelector('#btn');
  btn.click();
}

addPatientInfo();





