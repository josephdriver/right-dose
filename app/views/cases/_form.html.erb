<%= simple_form_for case_two, remote: true do |cf| %>
  <%= cf.input :age,
    input_html: { id: 'input-age' } %>
  <%= cf.input :weight,
    input_html: { id: 'input-weight' } %>
  <%= cf.input :paramedic_id,
    as: :hidden,
    input_html: {
      value: @paramedic.id,
      id: 'medic-id' } %>
  <%= cf.button :submit,
    id: 'input-submit-btn' %>
<% end %>
