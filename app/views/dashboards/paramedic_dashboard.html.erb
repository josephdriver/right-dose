<div class="page-container">

  <div class="header-container">
    <%= render 'shared/paramedic/navbar', medic: @paramedic %>
  </div>

  <div class="patient-container px-2 py-1">
    <div class="patient-info-container d-flex justify-content-around">
      <div class="patient-info-header header-font">
        PATIENT INFORMATION:
      </div>
      <div class="patient-info-age body-font">
        <p>AGE: <%= @case.age %></p>
      </div>
      <div class="patient-info-weight body-font">
        <p>WEIGHT: <%= @case.weight %></p>
      </div>
    </div>

    <!-- AGE/WEIGHT MODAL -->
    <div id="edit-case-modal">
      <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="edit-case-form">
              <%= simple_form_for @case, url: case_path(@case.id), remote: true do |cf| %>
                <%= cf.input :age %>
                <%= cf.input :weight %>
                <%= cf.input :paramedic_id,
                  as: :hidden,
                  input_html: { value: @paramedic.id } %>
                <%= cf.button :submit %>
              <% end %>
            </div>
          </div>
        </div>
     </div>

      <%#= render 'shared/paramedic/age_weight_modal', case: @case %>
    </div>
  </div>

  <div class="active-container px-2 py-1">
    <%#= render 'shared/paramedic/active_drug', drug: @drugs.first %>
  </div>

  <div class="search-container px-2 pt-1">
    <input type="text" id="myInput" placeholder="Search for drugs..">
  </div>

  <div class="queue-container px-2 pb-1">
    <ul id="myUL">
      <% @drugs.order(:name).each do |drug| %>
        <li class="drug header-font"><a datae href="#"><%= drug.name %></a></li>
      <% end %>
    </ul>
  </div>

  <div class="footer-container">
    <%= render 'shared/paramedic/footer' %>
  </div>
</div>
