<div class="card w-80">
      <div class="p-5">
        <div class="d-flex">
          <h3 class="card-title px-5">Weight and Calculation Parameters</h3>
          <p><%= link_to 'edit', edit_organization_path(@organization), data: {toggle: "modal", target: "#editOrgModal"} %></p>
        </div>
        <p class="grey px-5">as at <%= Time.now.strftime("%m/%d/%Y") %></p>
      </div>
  <div class="d-flex py-3 px-5 justify-content-around">
    <div class="card-half">
      <ul class="list-group list-group-flush border-bottom-0">
        <li class="list-group-item">
          <h6 class="card-text font-weight-bold">Age Limit Cutoffs</h6>
        </li>
        <li class="list-group-item d-flex justify-content-between" style="height: 5rem;">
          <h6 class="card-text">Pediatric</h6>
          <p class="card-text"><small class="text-muted"> <%= @organization.pediatric_cutoff %> years or less</small></p>
        </li>
        <li class="list-group-item d-flex justify-content-between" style="height: 5rem;">
          <h6 class="card-text">Infant</h6>
          <p class="card-text"><small class="text-muted">1 year</small></p>
        </li>
      </ul>
      <div class="card-body d-flex justify-content-between">
        <h6 class="card-text">Newborn</h6>
        <p class="card-text "><small class="text-muted">less than 24 hours</small></p>
      </div>
    </div>
    <div class="card-half">
      <ul class="list-group list-group-flush border-bottom-0">
        <li class="list-group-item">
          <h6 class="card-text font-weight-bold">Weight Calculation</h6>
        </li>
        <li class="list-group-item d-flex justify-content-between" style="height: 5rem;">
          <h6 class="card-text">Pediatric</h6>
          <p class="card-text"><small class="text-muted">age x  <%= @organization.multiplier %> + <%= @organization.addition_num %></small></p>
        </li>
        <li class="list-group-item d-flex justify-content-between" style="height: 5rem;">
          <h6 class="card-text">6 months</h6>
          <p class="card-text"><small class="text-muted"><%= @organization.weight_6mth %><%= @organization.weight_unit %> </small></p>
        </li>
      </ul>
      <div class="card-body d-flex justify-content-between">
        <h6 class="card-text">3 months</h6>
        <p class="card-text "><small class="text-muted"><%= @organization.weight_3mth %><%= @organization.weight_unit %></small></p>
      </div>
    </div>
  </div>

  </div>

<div class="modal fade" id="editOrgModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Update Organization Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render '/organizations/form' %>
      </div>
    </div>
  </div>
</div>
